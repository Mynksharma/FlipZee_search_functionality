<script>
    function datatransfer(){
        var inputvalue=document.getElementById("inputvalue").value;
         var center=document.getElementById('cent');
         
        var xhttp=new XMLHttpRequest();
		xhttp.onreadystatechange=function(){
        if(this.readyState==4 && this.status==200){
				var data=this.responseText;
                var data=JSON.parse(data);
                center.style.marginTop="100px";
				while(center.firstChild){ 
                center.removeChild(center.firstChild); 
                 }
                for(x of data){
                    var tiles=document.createElement("div");
                    var imagesection=document.createElement("div");
                    var textsection=document.createElement("div");
                    tiles.style.height="100px";
                    tiles.style.width="80%";
                    tiles.style.color="white";
                    tiles.style.backgroundColor="black";
                    tiles.style.margin="0 auto";
                    tiles.style.marginBottom="20px";
                    tiles.style.borderRadius="5px";
                    
                     imagesection.style.height="100px";
                    imagesection.style.width="10%";
                    imagesection.style.float="left";
                    var image=document.createElement("div");
                    image.classList.add("thumbnail");
                    image.style.margin="10px";
                    image.style.width="80px";
                    image.style.height="80px";
                    var img=document.createElement("img");
		            img.setAttribute('src',"/images/posters9.jpg");
                    img.style.height="100%";
                    img.style.width="100%";
                    image.appendChild(img);
                    imagesection.appendChild(image);

                    textsection.style.height="100px";
                    textsection.style.width="90%";
                    textsection.style.float="left";
                    var moviename=document.createElement("div");
                    moviename.style.height="60px";
                    moviename.style.width="100%";moviename.style.padding="5px";
                    var node=document.createTextNode(x['name']);
                    moviename.style.fontSize="30px";
                     moviename.style.fontStyle="italic";
                    moviename.appendChild(node);
                     textsection.appendChild(moviename);
                    var language=document.createElement("div");
                    language.style.height="30px";
                    language.style.width="100%";language.style.padding="5px";
                    var node=document.createTextNode("Language: "+x['language']);
                    language.style.fontSize="18px"; 
                    language.style.fontStyle="italic";
                    language.appendChild(node);
                    textsection.appendChild(language);

                    tiles.appendChild(imagesection);
                   tiles.appendChild(textsection);
                    center.appendChild(tiles); 
                }
				}
			}
            xhttp.open("GET","/getdata?data="+inputvalue,true);xhttp.send(); 

		}
</script>
