<body>
    <div class="header">
        <div class="header-inner">
            <img src="/images/fzlogo.png" />
            <form class="form-inline" style="float:right" action="javascript:void(0);">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search for movies" id='inputvalue'/>
                    <button type="submit" class="btn btn-danger" onclick="datatransfer();"><span class="glyphicon glyphicon-search"></span></button>
